<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <h4><%= pluralize(@category.errors.count, "ошибка", "ошибки") %></h4>
      </div>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%=raw msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Название" %><br>
    <%= f.text_field :name, class: "form-control"  %>
  </div>
  <div class="container-btn-cart">
    <div class="actions">
      <%= f.submit 'Создать категорию', class: "btn btn-success" %>
    </div>
    <%= link_to 'Категории', categories_path, class: "btn btn-warning" %>
  </div>
<% end %>
