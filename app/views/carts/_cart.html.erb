<table class="table">
  <thead>
  <tr>
    <th>Изображение</th>
    <th>Название</th>
    <th>Описание</th>
    <th>Количество</th>
    <th>Цена</th>
  </tr>
  </thead>
  <tbody>
  <% @cart.line_items.each do |item| %>
    <% if item == @current_item %>
      <tr id="current_item">
    <% else %>
      <tr>
    <% end %>
    <td><img src="<%= item.product.image_url %>" alt=""></td>
    <td><%= item.product.title %></td>
    <td><%= item.product.description %></td>
    <td>
      <span class="badge">
        <%= link_to decrease_line_item_path(item), :method => :put, remote: true do %>
          <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
        <% end %>
        <%= item.quantity %>
        <%= link_to increase_line_item_path(item), :method => :put, remote: true do %>
          <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
        <% end %>
      </span>
    </td>
    <td><%= item.total_price %> Руб.</td>
    </tr>
  <% end %>
  <tr>
    <td colspan="3">Сумма</td>
    <td><%= @cart.line_items.sum(:quantity) %></td>
    <td><%= @cart.total_price %> Руб.</td>
  </tr>
  </tbody>
</table>