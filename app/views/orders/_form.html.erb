<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <h4><%= pluralize(@order.errors.count, "ошибка", "ошибки") %></h4>
      </div>
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li>* <%=raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, t('.name') %><br>
    <%= f.text_field :name, size: 40, class: "form-control", placeholder: "Введите имя" %>
  </div>
  <div class="form-group">
    <%= f.label :address, t('.address') %><br>
    <%= f.text_area :address, rows: 3, cols: 40, class: "form-control", placeholder: "Введите адресс"   %>
  </div>
  <div class="form-group">
    <%= f.label :email, t('.email') %><br>
    <%= f.text_field :email, size: 40, class: "form-control", placeholder: "Введите E-mail" %>
  </div>
  <div class="form-group">
    <%= f.label :pay_type, t('.pay_type') %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, {}, { class: 'form-control' } %>
  </div>
  <div class="container-btn-cart">
    <div class="actions">
      <%= f.submit 'Оформить заказ', class: "btn btn-success" %>
    </div>
    <%= link_to 'Перейти в корзину', cart_path(@cart), class: "btn btn-warning" %>
  </div>
<% end %>