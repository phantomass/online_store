<div class="col-md-3">
  <p class="lead">Товары по категориям</p>
  <div class="list-group">
    <% @categories.each do |c| %>
      <% if current_page?(category_path(c)) %>
        <%= link_to c.name, category_path(c) , class: "list-group-item active" %>
      <% else %>
        <%= link_to c.name, category_path(c) , class: "list-group-item" %>
      <% end %>
    <% end %>
  </div>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><b><%= value %></b></div>
  <% end %>
</div>